{
  "name": "coinlympia-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "dev": "tsx watch --clear-screen=false server.ts",
    "build": "prisma generate --schema=./prisma/schema.prisma && echo 'Build complete'",
    "start": "npx tsx server.ts",
    "type-check": "tsc --noEmit",
    "sync-games": "node --import tsx scripts/sync-all-games.ts",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "openai": "^6.1.0",
    "axios": "0.27.0",
    "ethers": "^5.7.2",
    "@prisma/client": "^6.19.0",
    "@prisma/extension-accelerate": "^2.0.0",
    "graphql-request": "^6.1.0",
    "dotenv": "^16.0.0",
    "tsx": "^4.20.6",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20",
    "patch-package": "^8.0.0",
    "vite": "^5.4.11",
    "prisma": "^6.19.0",
    "tsconfig-paths": "^4.2.0"
  }
}
